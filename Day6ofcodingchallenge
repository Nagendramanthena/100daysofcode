	{
		// your code goes here
		Scanner sc = new Scanner(System.in);
		int t = sc.nextInt();
		for(int j=0;j<t;j++){
		    int x = sc.nextInt();int y  =sc.nextInt();int min = 0;
		    int z = 0;int xdi = Integer.MAX_VALUE;int ydi = Integer.MAX_VALUE;
		    if(x<y){
		        for(int i=x;i<=y;i++){
		            if(i-x<=y-i){
		                if(ydi > y-i){
		                    ydi = y-i;
		                }
		            }
		        }
		        System.out.println(ydi);
		    }
		    else{
		        for(int i=y;i<=x;i++){
		            if(i-y<=x-i){
		                if(xdi>x-i){
		                    xdi = x-i;
		                }
		            }
		        }
		        System.out.println(xdi);
		    }
		}
	}
}


