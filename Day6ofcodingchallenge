import java.util.*;
import java.lang.*;
import java.io.*;

/* Name of the class has to be "Main" only if the class is public. */
class Codechef
{
	public static void main (String[] args) throws java.lang.Exception
	{
		Scanner sc = new Scanner(System.in);
		int T = sc.nextInt();
		for(int i=0;i<T;i++){
		    int a = sc.nextInt();
		    int b = sc.nextInt();
		    if(a>=b){
		        System.out.println(b);
		    }
		    else{
		        System.out.println(a);
		    }
		}
	}
}

