////////// Max 69 Number /////////
class Solution {
    public int maximum69Number (int num) {
        String s = String.valueOf(num);boolean b = true;
        String res = "";
        for(int i =0;i<s.length();i++){
            if(s.charAt(i) == '6' && b){
                res += "9";
                b = false;
            }
            else{
                res += s.substring(i,i+1);
            }
        }
        return Integer.valueOf(res);
    }
}

//////////////// second Approach //////
class Solution {
      public int maximum69Number (int num) {
        return Integer.parseInt(("" + num).replaceFirst("6", "9"));
    }
}
